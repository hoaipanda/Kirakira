<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/analog3_bg"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_margin="2dp"
    android:background="@drawable/boder_item_filter"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/analog3_imgBitMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/thumd"
        android:background="@drawable/boder_item_filter"
        android:scaleType="centerCrop" />


    <ImageView
        android:id="@+id/imgSelected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/bg_selected_filter" />

    <TextView
        android:id="@+id/analog3_tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/analog3_imgBitMap"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#fff"
        android:textSize="10sp" />
</RelativeLayout>
